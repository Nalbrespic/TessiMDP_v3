<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Etat Transport {% endblock %}</title>
    {% block stylesheets %}

        {#<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">#}
        {#<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">#}
        <link rel="stylesheet" href="{{ asset('jquery-ui-1.12.1/jquery-ui.theme.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bootstrap-3.3.7/css/bootstrap.min.css') }}">

        <link rel="stylesheet" href="{{ asset('css/fullcalendar.css') }}">
        <link rel="stylesheet" href="{{ asset('Multi-level-Vertical-Accordion/src/lazeemenu.css') }}">
        <link rel="stylesheet" href="{{ asset('style.css') }}">
        <link rel="stylesheet" href="{{ asset('rangeDatePicker/jquery-date-range-picker-master/dist/daterangepicker.css') }}">
        <link rel="stylesheet" href="{{ asset('datepicker.css') }}">
        <link rel="stylesheet" href="https://printjs-4de6.kxcdn.com/print.min.css">
        <link rel="stylesheet" href="{{ asset('css/timeline.css') }}">

    {% endblock %}
</head>
{%  block body %}

    <div style="background-color: grey; font-family: 'Arial Unicode MS'">
        <div class="container"style="width:800px; height: 1300px;background-color: white;margin:auto;">
            <div class="blockTitle" style="text-align: center">
                <h2>Etat des Transports {{ month }}</h2>
                <h3>Client: {{ client.nomclient }}</h3>
                <h3>Opération: {{ appli.appliname }}</h3>
            </div>
            <div class="row" style="display: flex; justify-content: center">
                <div class="col-md-8" id="tableau1" style="border: 1px solid black; border-radius: 15px; ">
                    <h4>Colis selon le mode de Transport</h4>
                    <table class="table table-striped">
                        <thead>
                        <th>Type de transport</th>
                        <th>Nombre de commandes</th>
                        </thead>
                        <tbody>
                        {% for key, value in nbreTypeTransport %}
                            <tr>
                                <td style="text-align: center">{{ key }}</td><td style="text-align: center">{{ value }}</td>
                            </tr>

                        {% endfor %}
                       <tr class="success"><td style="text-align: center">TOTAL</td><td style="text-align: center">{{ totalBl }}</td></tr>
                        <td></td>
                        </tbody>
                    </table>
                </div>
            </div>
                <div class="row">
                    {% for key, value in tranches %}
                        {% if tranches[key] != [] %}
                    <div class="col-md-5" id="tableau2" style="border: 1px solid black; border-radius: 15px; margin:20px">
                        <h5>Colis expédiés en {{ key }}</h5>
                        <table class="table table-striped table-condensed">
                            <thead>
                            <th>Tranche de poids en g</th><th>nombre de commandes</th>
                            </thead>
                            <tbody>
                             {% for tr in tranches[key]  %}
                                 <tr>
                                     <td>{{ tr['poidsMax'] }}</td><td>{{ tr['nombreBl']}}</td>
                                 </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
</html>